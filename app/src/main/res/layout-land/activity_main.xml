<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wikusia.calculatorapp.MainActivity"
    tools:layout_editor_absoluteY="73dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="numberSigned|numberDecimal"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/button0"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="0"
        tools:ignore="HardcodedText,RtlHardcoded"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonDot"
        app:layout_constraintRight_toLeftOf="@+id/buttonDot"
        android:layout_marginRight="8dp"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="2"
        tools:ignore="HardcodedText"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/button5"
        app:layout_constraintBaseline_toBaselineOf="@+id/button3"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="3"
        tools:ignore="HardcodedText"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button6"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/button6"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="4"
        tools:ignore="HardcodedText,RtlHardcoded"
        app:layout_constraintBaseline_toBaselineOf="@+id/button5"
        app:layout_constraintRight_toLeftOf="@+id/button5"
        android:layout_marginRight="8dp"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="5"
        tools:ignore="HardcodedText"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/button8"
        app:layout_constraintBaseline_toBaselineOf="@+id/button6"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="6"
        tools:ignore="HardcodedText"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button9"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/button9"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="7"
        tools:ignore="HardcodedText"
        app:layout_constraintBaseline_toBaselineOf="@+id/button8"
        app:layout_constraintRight_toLeftOf="@+id/button8"
        android:layout_marginRight="8dp"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="8"
        tools:ignore="HardcodedText"
        app:layout_constraintBaseline_toBaselineOf="@+id/button9"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginRight="4dp"/>

    <Button
        android:id="@+id/button9"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="9"
        tools:ignore="HardcodedText"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/result"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="1"
        tools:ignore="HardcodedText"
        app:layout_constraintRight_toLeftOf="@+id/button2"
        android:layout_marginRight="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button2"/>

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,RtlHardcoded"
        app:layout_constraintBaseline_toBaselineOf="@+id/button9"
        app:layout_constraintLeft_toRightOf="@+id/button9"
        android:layout_marginLeft="8dp"/>

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        app:layout_constraintBaseline_toBaselineOf="@+id/button6"
        app:layout_constraintLeft_toRightOf="@+id/button6"
        android:layout_marginLeft="8dp"/>

    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        app:layout_constraintBaseline_toBaselineOf="@+id/button3"
        app:layout_constraintLeft_toRightOf="@+id/button3"
        android:layout_marginLeft="8dp"/>

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonEquals"
        app:layout_constraintLeft_toRightOf="@+id/buttonEquals"
        android:layout_marginLeft="8dp"/>

    <Button
        android:id="@+id/buttonDot"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="."
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/button2"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonEquals"/>

    <Button
        android:id="@+id/buttonEquals"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/button3"/>

    <TextView
        android:id="@+id/operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        app:layout_constraintRight_toLeftOf="@+id/button7"
        android:layout_marginRight="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button7"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/newNumber"/>

    <EditText
        android:id="@+id/newNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberSigned"
        tools:focusable="false"
        tools:focusableInTouchMode="false"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginRight="8dp"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="296dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="296dp"/>

    <Button
        android:id="@+id/opposite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="*(-1)"
        android:onClick="onClickOppositeButton"
        app:layout_constraintRight_toRightOf="@+id/result"
        app:layout_constraintTop_toBottomOf="@+id/result"/>
</android.support.constraint.ConstraintLayout>
